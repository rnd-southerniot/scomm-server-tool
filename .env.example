CHIRPSTACK_HOST=localhost
CHIRPSTACK_GRPC_ADDR=localhost:9000
MQTT_BROKER=mqtt://localhost:1883
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Compose / stack configuration (safe defaults for local dev)
TZ=UTC

# ChirpStack database (change in production!)
# CS_POSTGRES_DB=chirpstack
# CS_POSTGRES_USER=chirpstack
# CS_POSTGRES_PASSWORD=changeme

# Grafana admin (change in production!)
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=changeme

# Secrets are file-based for Phase 0 hardening. Populate these files locally:
# secrets/postgres_user
# secrets/postgres_db
# secrets/postgres_password
# secrets/grafana_admin_password
# secrets/chirpstack_explorer_token
# secrets/chirpstack_explorer_app_password
# secrets/chirpstack_explorer_session_secret

# Docker Compose host-port overrides (use if the defaults collide on your machine)
# CS_POSTGRES_PORT=5433
# CS_REDIS_PORT=6380
# CS_HTTP_PORT=8091
# GRAFANA_PORT=3001

# Bind addresses (use `127.0.0.1` to avoid exposing services publicly on a VM)
# CS_POSTGRES_BIND_ADDR=127.0.0.1
# CS_REDIS_BIND_ADDR=127.0.0.1
# CS_HTTP_BIND_ADDR=0.0.0.0
# CS_GWB_BIND_ADDR=0.0.0.0
# MQTT_BIND_ADDR=0.0.0.0
# GRAFANA_BIND_ADDR=0.0.0.0
# PROM_BIND_ADDR=127.0.0.1
# ALERTMGR_BIND_ADDR=127.0.0.1

# Optional: ChirpStack Explorer UI (requires an image; by default it uses your local build name)
# Enable with: `docker compose --profile explorer up -d chirpstack_explorer`
# CHIRPSTACK_EXPLORER_IMAGE=ghcr.io/your-org/chirpstack-explorer:latest
# CHIRPSTACK_EXPLORER_BIND_ADDR=0.0.0.0
# CHIRPSTACK_EXPLORER_PORT=3002
# CHIRPSTACK_EXPLORER_BASE_URL=http://localhost:8090
# CHIRPSTACK_EXPLORER_TOKEN=   # ChirpStack API token (do not commit)
# CHIRPSTACK_EXPLORER_APP_USERNAME=admin
# CHIRPSTACK_EXPLORER_APP_PASSWORD=   # do not commit
# CHIRPSTACK_EXPLORER_SESSION_SECRET=change-this-to-a-long-random-string
